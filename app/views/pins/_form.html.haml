= simple_form_for @pin, html: {multipart: true} do |f|
  - if @pin.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pin.errors.count, "error")} prohibited this pin from being saved:"
      %ul
        - @pin.errors.full_messages.each do |msg|
          %li= msg

  =f.input :image
  =f.input :name
  =f.input :description
  =f.button :submit, class: "btn"
